{% extends 'admin.twig' %}

{% block menu %}
    <ul class="nav nav-pills nav-stacked">
        <li class="active"><a href="/admin/office">Агенства</a></li>
        <li><a href="/admin/city">Города</a></li>
        <li><a href="/admin/metro">Станции метро</a></li>
    </ul>
{% endblock %}

{% block content %}	
	<h1>Агенства <a href="/admin/office/add" class="btn btn-success">Добавить агенство</a></h1>

    {% if offices %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Город</th>
                    <th>Агенство</th>
                    <th style="text-align:center;">Изображение</th>
                    <th colspan="2">Действия</th>
                </tr>
            </thead>
            <tbody>
            
                {% for office in offices %}
                    <tr>
                        <td style="width:30px;">{{ office.id }}</td>
                        <td>{{ office.city }}</td>
                        <td>{{ office.title }}</td>
                        <td style="text-align:center;">
                            {% if office.image %}
                                <i class="icon-ok"></i>
                            {% else %}
                                <i class="icon-remove"></i>
                            {% endif %}
                        </td>
                        <td style="width:100px;"><a href="/admin/office/edit/{{ office.id }}">Редактировать</a></td>
                        <td style="width:100px;"><a href="/admin/office/delete/{{ office.id }}">Удалить</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Нет ни одного агенства.</p>
    {% endif %}
{% endblock %}