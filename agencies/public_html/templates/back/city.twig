{% extends 'admin.twig' %}

{% block menu %}
    <ul class="nav nav-pills nav-stacked">
        <li><a href="/admin/office">Агенства</a></li>
        <li class="active"><a href="/admin/city">Города</a></li>
        <li><a href="/admin/metro">Станции метро</a></li>
    </ul>
{% endblock %}

{% block content %}	
	<h1>Города <a href="/admin/city/add" class="btn btn-success">Добавить город</a></h1>

	{% if cities %}
		<table class="table table-striped">
			<thead>
				<tr>
					<th>#</th>
					<th>Город</th>
					<th colspan="2">Действия</th>
				</tr>
			</thead>
			<tbody>
				{% for city in cities %}
					<tr>
						<td style="width:30px;">{{ city.id }}</td>
						<td>{{ city.city }}</td>
						<td style="width:100px;"><a href="/admin/city/edit/{{ city.id }}">Редактировать</a></td>
						<td style="width:100px;"><a href="/admin/city/delete/{{ city.id }}">Удалить</a></td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		<p>Нет ни одного города.</p>
	{% endif %}
{% endblock %}