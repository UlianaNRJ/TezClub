{% extends 'layout.twig' %}

{% block page_title %} Все отели {% endblock %}

{% block content %}
<div class="caption">

</div>
<div class="text">


    <div class="list wide hotel">
        <div class="ib info">
            {% for city in hotelcitys %}
            <h1> {{ city.name }}</h1>
            <h3>Отель</h3>
            <ul class="grid">
                {% for hotel in city.hotels %}
                <li class="c">
                    <img class="ib" src="/img/avatar-25.png" width="25" height="25" alt=""/>
                    <a class="ib name" href="/hotel/{{ hotel.id }}">{{ hotel.name }}</a>
                    <div class="ib count">статей <span class="score">{{ hotel.count_topic }}</span></div>
                </li>
                {% endfor %}
            </ul>
            {% endfor %}
        </div>
        <div class="ib info">
            <h1>Подобрать отель</h1>
            <input type="checkbox" name="" class="" />
            <label>Молодежный отдых</label><br/>

            <input type="checkbox" name="" class="" />
            <label>Роскошный отдых</label><br/>

            <input type="checkbox" name="" class="" />
            <label>Активный отдых</label><br/>

            <input type="checkbox" name="" class="" />
            <label>Спокойный отдых</label><br/>
        </div>
    </div>



</div>
{% endblock %}