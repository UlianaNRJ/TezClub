{% extends 'admin.twig' %}

{% block page_title %}Blog Administration{% endblock %}

{% block content %}	
	<h1>Blog Administration <a href="/admin/topic/add" class="btn btn-success">Add Topic</a></h1>

	{% if topics %}
		<table class="table table-striped">
			<thead>
				<tr>
					<th>#</th>
					<th>Title</th>
					<th>Author</th>
					<th>Hotel</th>
					<th>Date</th>
					<th colspan="3">Actions</th>
				</tr>
			</thead>
			<tbody>
			
				{% for topic in topics %}
					<tr>
						<td>{{ topic.id }}</td>
						<td>{{ topic.title }}</td>
						<td>{{ topic.author }}</td>
						<td>{{ topic.hotel }}</td>
						<td>{{ topic.timestamp|date('jS F Y H:i:s') }}</td>
						<td>
							{% if topic.active == 1 %}
                                <i class="icon-eye-open"></i>
                            {% else %}
                                <i class="icon-eye-close"></i>
                            {% endif %}
                        </td>
						<td><a href="/admin/topic/edit/{{ topic.id }}">Edit</a></td>
						<td><a href="/admin/topic/delete/{{ topic.id }}">Delete</a></td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		<p>There are currently no topics.</p>
	{% endif %}
{% endblock %}