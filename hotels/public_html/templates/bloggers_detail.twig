{% extends 'layout.twig' %}

{% block page_title %}Bloggers Title{% endblock %}

{% block content %}
<div class="caption">
    <form method="post" action="/bloggers/{{ blogger.id }}" class="bloggers_form" name="caption_form">
        <select name="sortbybloggers">
            <option value="">По блоггерам</option>
            {% for blogger in bloggers %}
            <option value="{{ blogger.id }}" {% if sortbybloggers == blogger.id %} selected {% endif %}>{{ blogger.name }}</option>
            {% endfor %}
        </select>
    </form>
    <span class="name">{{ blogger.name }}</span>
    <a class="all" href="/bloggers">все блогеры</a>
</div>
<div class="text">
    <div class="c info">
        <div class="ib avatar">
            {% if blogger.image %}
                <img src="/{{ blogger.image }}.225" height="225" width="225" alt="avatar" class="ib"/>
            {% else %}
                <img src="/img/avatar.png" height="225" width="225" alt="avatar" class="ib"/>
            {% endif %}

        <div class="poll" id="rating{{ blogger.id }}">
            <div class="statistic">Балы <span class="score">{{ blogger.count_bals|number_format(2) }}</span> </div><div class="vote-result"></div>

            <div  class="rating ib vote">
                <div class="vote-wrap blogger">
                    <div class="vote-hover-text">Проголосовать:</div>
                    <div class="vote-hover" >
                        <div class="vote-block">
                            <div class="vote-stars"></div>
                            <div class="vote-active"></div>
                        </div>
                    </div>
                    <div class="vote-success"></div>
                </div>
                &nbsp; &nbsp; &nbsp;<input type="hidden" name="val" value="{{ blogger.count_bals }}"/>
                &nbsp; &nbsp; &nbsp;<input type="hidden" name="votes" value="{{ blogger.count_voises }}"/>
                &nbsp; &nbsp; &nbsp;<input type="hidden" name="blogger-id" value="{{ blogger.id }}"/>
            </div>
            <script  type="text/javascript">
            jQuery(document).ready(function($){
               $('#rating{{ blogger.id }}').rating({
                    fx: 'float',
                    stars: 5,
                    image: '/img/stars.png',
                    loader: '/img/ajax-loader.gif',
                    url: '/blogger/vote',
                    //readOnly: true
               });
             });
            </script>
        </div>
        </div>
        <div class="ib data">
            <h2>{{ blogger.login }}</h2>
            <div class="name">{{ blogger.name }}</div>
            <h3>Личное</h3>
            <dl>
                <dt>Пол:</dt>
                <dd>{% if blogger.sex == 1 %}
                        мужской
                    {% elseif blogger.sex == 2 %}
                        женский
                    {% else %}
                        -
                    {% endif %}
                </dd>
                <dt>Дата рождения:</dt>
                <dd>{{ blogger.bd_date|default("-") }}</dd>
                <dt>Местоположение:</dt>
                <dd>{{ blogger.bd_plase|default("-") }}</dd>
            </dl>
            <h3>О себе:</h3>
            <div>{{ blogger.about|default("-")|raw }}</div>
            <h3>Связаться:</h3>
            <ul class="c social">
                {% if blogger.soc_links.vk !='' %}
                <li class="ib vk"><a href="{{ blogger.soc_links.vk }}">Вконтакте</a></li>
                {% endif %}
                {% if blogger.soc_links.lj !='' %}
                <li class="ib lj"><a href="{{ blogger.soc_links.lj }}">Livejournal</a></li>
                {% endif %}
                {% if blogger.soc_links.tw !='' %}
                <li class="ib tw"><a href="{{ blogger.soc_links.tw }}">Twitter</a></li>
                {% endif %}
                {% if blogger.soc_links.fb !='' %}
                <li class="ib fb"><a href="{{ blogger.soc_links.fb }}">Facebook</a></li>
                {% endif %}
            </ul>
        </div>
        <div class="ib hotel">
            <h3>Отели {{ blogger.name }}</h3>
            <ul class="grid" style="width: 275px;">
                {% for hotel in hotels %}
                <li class="c">
                    {% if hotel.image %}
                        <img src="/{{ hotel.image }}.25" width="25" alt="avatar" class="ib"/>
                    {% else %}
                        <img src="/img/hotel-25.png" width="25" alt="avatar" class="ib"/>
                    {% endif %}
                    <a class="ib name" href="/hotel/{{ hotel.id }}">{{ hotel.name }}</a>
                    <div class="ib count">статей <span class="score">{{ hotel.count_topic }}</span></div>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="options">
        {% if topics %}
            {% include 'list_options_detail.twig' %}
        {% endif %}
    </div>
    <div class="list short hotels">
        {% include 'list_short_hotel.twig' %}
    </div>
    <div class="pagination">
        Страница
        <ul class="c ib pagging">
        {% for page in pagination %}
            {% if page.current == current %}
                <li class="ib active">{{page.id}}</li>
            {% else %}
                <li class="ib"><a href="/hotel/{{ hotel.id }}/{{page.id}}">{{page.id}}</a></li>
            {% endif %}
        {% endfor %}
        </ul>
    </div>


</div>

{% endblock %}