{% extends 'admin.twig' %}

{% block page_title %}Hotel City Administration{% endblock %}

{% block content %} 
    <h1>Hotel City Administration <a href="/admin/hotelcity/add" class="btn btn-success">Add hotel city</a></h1>

    {% if hotelcitys %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                    <th colspan="3">Actions</th>
                </tr>
            </thead>
            <tbody>
            
                {% for hotelcity in hotelcitys %}
                    <tr>
                        <td>{{ hotelcity.id }}</td>
                        <td>{{ hotelcity.name }}</td>
                        <td>
                            <a href="/admin/hotelcity/chactive/{{ hotelcity.id }}">
                                {% if hotelcity.active == 1 %}
                                    <i class="icon-eye-open"></i>
                                {% else %}
                                    <i class="icon-eye-close"></i>
                                {% endif %}
                            </a>
                        </td>
                        <td><a href="/admin/hotelcity/edit/{{ hotelcity.id }}">Edit</a></td>
                        <td><a href="/admin/hotelcity/delete/{{ hotelcity.id }}" class="delete">Delete</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>There are currently no hotelcitys.</p>
    {% endif %}
{% endblock %}