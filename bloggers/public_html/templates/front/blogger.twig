            <td class="var">Создал:</td>
            <td>
                {% for blog in blogs_created %}
                    <a href="{{ ROOT_URL }}blog/{{blog.url}}/">{{ blog.title }}</a>{% if loop.last != true %}, {% endif %}
                {% endfor %}
            </td>
        </tr>
    {% endif %}

